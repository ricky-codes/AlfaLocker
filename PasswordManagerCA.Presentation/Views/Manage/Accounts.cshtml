@model IEnumerable<PasswordManagerCA.Core.Entities.Accounts>

@{
    ViewBag.Title = "Accounts";
}

<h2>Accounts</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.accountUsername)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.accountPasswordHash)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.accountPasswordSalt)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.accountWebsiteLink)
        </th>
