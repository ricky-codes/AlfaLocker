@model IEnumerable<PasswordManagerCA.Core.Commands.UserAccountsCommand>

@{
    ViewBag.Title = "Accounts";
}

<h2>Accounts</h2>

<p>
    @Html.ActionLink("Create New", "Create", "Manage")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.AccountsUsername)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.AccountPassword)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.AccountWebsiteLink)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.AccountsUsername)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AccountPassword)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AccountWebsiteLink)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.Id })
            </td>
        </tr>
    }

</table>
