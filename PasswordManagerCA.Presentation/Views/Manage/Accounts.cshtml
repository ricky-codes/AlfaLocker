    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.accountUsername)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.accountPasswordHash)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.accountPasswordSalt)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.accountWebsiteLink)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.accountApp)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.accountAppUser)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.id }) |
            @Html.ActionLink("Details", "Details", new { id=item.id }) |
